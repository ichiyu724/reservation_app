<h2>アカウント編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: "account-form-header" %><br />
    <%= f.email_field :email, class: "account-form-control", autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, class: "account-form-header" %> <i>(変更する場合のみ入力)</i><br />
    <%= f.password_field :password, class: "account-form-control", autocomplete: "new-password" %>
    
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "account-form-header" %><i>(変更する場合のみ入力)</i><br />
    <%= f.password_field :password_confirmation, class: "account-form-control", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password, class: "account-form-header" %><br />
    <%= f.password_field :current_password, class: "account-form-control", autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "更新", class: "btn-account-update" %>
  </div>
<% end %>

<%= link_to "戻る", :back, class: "btn-back" %>
