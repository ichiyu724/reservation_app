<h2>登録済みルーム一覧</h2>

<table>
 <thead>
  <tr>
   <th>ルーム画像</th>
   <th>ルーム名</th>
   <th>ルーム紹介</th>
   <th>料金</th>
   <th>作成日</th>
  </tr>
 </thead>

 <tbody>
  
  <% @search_rooms.each do |room|%>
   <tr>
    <td>
      <% if room.image.blank?%>
        <%= image_tag "room01.jpeg", size: "300x150" %>
      <% else %>
        <%= image_tag room.image.url, size: "300x150" %>
      <% end %>
    </td>
    <td><%= link_to room.name, room %></td>
    <td><%= room.introduction %></td>
    <td><%= room.price %>円</td>
    <td><%= room.created_at %></td>
   </tr>
  <% end %>
 </tbody>

</table>
